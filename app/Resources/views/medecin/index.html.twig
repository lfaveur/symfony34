{% extends 'base.html.twig' %}

{% block body %}
    <h1>Medecins list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ville</th>
                <th>Région</th>
                <th>Département</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medecin in medecins %}
            <tr>
                <td><a href="{{ path('medecin_show', { 'id': medecin.id }) }}">{{ medecin.id }}</a></td>
                <td>{{ medecin.name }}</td>
                <td>{{ medecin.ville.name }}</td>
                <td>{{ medecin.ville.departement.name }}</td>
                <td>{{ medecin.ville.departement.region.name }}</td>
                <td>
                    {#<a class="btn btn-primary" href="{{ path('medecin_show', { 'id': medecin.id }) }}">show</a>#}
                    <a class="btn btn-primary" href="{{ path('medecin_edit', { 'id': medecin.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <p>
            <a class='btn btn-primary' href="{{ path('medecin_new') }}">Create a new medecin</a>
    </p>
{% endblock %}
